<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
</head>

<body>
    <h1 class="mt-4">Dashboard</h1>
    

    <div class="container">
        <% if(typeof errors !='undefined' ) { %>
            <% errors.forEach(function(error) { %>
                <%= error.msg %><br><br>
                    <% }); %>
                        <% } %>
                            <% if(success_msg !='' ) { %>
                                <%= success_msg %>
                                    <% } %>
                                        <% if(error_msg !='' ) { %>
                                            <%= error_msg %>
                                                <% } %>
                                                    <% if(error !='' ) { %>
                                                        <%= error %>
                                                            <% } %>
                                                                <form action="/add/task" method="POST" class="d-flex">
                                                                    <input type='text' name='task'
                                                                        class='form-control' />
                                                             
                                                                    <input type="submit" value="Add"
                                                                        class="btn btn-md btn-primary mx-2">
                                                                </form>
    </div>
    <ul class="list-group mt-3">
        <% allTasks.forEach((task)=> { %>
            <% if(task._id == TaskId ) { %>
            <li class="list-group-item mt-3">
                <form action="/update/task/<%= task._id %>" method="POST">
                <input type="text" value="<%= task.task %>" name="content"> &nbsp; &nbsp;
                    <button type="submit" class="btn btn-success btn-sm">Submit</button>
                    &nbsp; &nbsp;
                    <a href="/dashboard" class="btn btn-danger btn-sm">Cancel</a>
                </form>
            </li>
            <% } else {%>
                <li class="list-group-item mt-3">
                    <%= task.task %> &nbsp; &nbsp;
                        <a href="/delete/task/<%= task._id %>" class="btn btn-danger btn-sm">Delete</a>
                        &nbsp; &nbsp;
                        <a href="/update/task/<%= task._id %>" class="btn btn-primary btn-sm">Update</a>
                </li>
            <% } %>
            <% }) %>
    </ul>


    <br><br>

    <a href="/users/logout" class="btn btn-secondary">Logout</a>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
        crossorigin="anonymous"></script>
</body>

</html>